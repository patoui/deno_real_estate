<div class="container">
    <div class="row justify-content-center pt-5">
        <div class="col-6">
            <h1 class="text-center">Create Account</h1>
            <form method="POST" action="/sign-up" class="pt-3">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input name="name" type="text"
                        class="form-control {{#hasErrors 'name'}}is-invalid{{/hasErrors}}"
                        id="name" aria-describedby="nameHelp">
                    {{#hasErrors 'name'}}
                        <div class="invalid-feedback">
                        {{#each (errors 'name')}}
                            <p class="m-0">{{ this }}</p>
                        {{/each}}
                        </div>
                    {{/hasErrors}}
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input name="email" type="email"
                        class="form-control {{#hasErrors 'email'}}is-invalid{{/hasErrors}}"
                        id="email" aria-describedby="emailHelp">
                    {{#hasErrors 'email'}}
                        <div class="invalid-feedback">
                        {{#each (errors 'email')}}
                            <p class="m-0">{{ this }}</p>
                        {{/each}}
                        </div>
                    {{/hasErrors}}
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password"
                        class="form-control {{#hasErrors 'password'}}is-invalid{{/hasErrors}}"
                        id="password">
                    {{#hasErrors 'password'}}
                        <div class="invalid-feedback">
                        {{#each (errors 'password')}}
                            <p class="m-0">{{ this }}</p>
                        {{/each}}
                        </div>
                    {{/hasErrors}}
                </div>
                <div class="mb-3">
                    <label for="password_confirmation" class="form-label">Confirm Password</label>
                    <input name="password_confirmation" type="password"
                        class="form-control {{#hasErrors 'password_confirmation'}}is-invalid{{/hasErrors}}"
                        id="password_confirmation">
                    {{#hasErrors 'password_confirmation'}}
                        <div class="invalid-feedback">
                        {{#each (errors 'password_confirmation')}}
                            <p class="m-0">{{ this }}</p>
                        {{/each}}
                        </div>
                    {{/hasErrors}}
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </div>
</div>